{
    "lerna": "2.2.0",
    "tagVersionPrefix": "lib@",
    "includeMergedTags": true,
    "npmClient": "npm",
    "useWorkspaces": true,
    "version": "independent",
    "packages": [
        "api/*",
        "core/*"
    ],
    "command": {
        "bootstrap": {
            "hoist": true,
            "noCi": true,
            "npmClientArgs": [
                "--no-package-lock"
            ],
            "nohoist": [
                "egg"
            ]
        },
        "run": {
            "stream": true
        },
        "publish": {
            "npmClient": "npm",
            "bump": "patch",
            "conventionalCommits": true,
            "forcePublish": true,
            "skipGit": true,
            "allowBranch": [
                "main",
                "master"
            ],
            "message": "chore(release): ðŸ¤– publish package",
            "registry": "https://registry.npmjs.org/",
            "ignoreChanges": [
                "*.md"
            ]
        },
        "version": {
            "allowBranch": [
                "master",
                "release/*"
            ],
            "conventionalCommits": true,
            "exact": true,
            "createRelease": "github",
            "message": "chore(release): publish"
        }
    },
    "ignoreChanges": [
        "**/CHANGELOG.md",
        "**/tests/**",
        "lerna.json",
        "package.json",
        "README.md"
    ]
}
